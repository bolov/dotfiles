// Place your key bindings in this file to override the defaultsauto[]
[
    {
        "key": "ctrl+k", "command": "-extension.vim_ctrl+k"
    },
    {
        "key": "alt+l", "command": "-toggleFindInSelection",
        "when": "editorFocus"
    },
    {
        "key": "alt+h", "command": "workbench.action.navigateLeft"
    },
    {
        "key": "alt+l", "command": "workbench.action.navigateRight"
    },
    {
        "key": "alt+k", "command": "workbench.action.navigateUp"
    },
    {
        "key": "alt+j", "command": "workbench.action.navigateDown"
    },
    {
        "key": "ctrl-6", "command": "-workbench.action.focusSixthEditorGroup"
    },
    {
        "key": "ctrl-6", "command": "workbench.action.openNextRecentlyUsedEditorInGroup"
    },

    {
        "key" : "shift+h", "command": "workbench.action.previousEditorInGroup",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "shift+l", "command": "workbench.action.nextEditorInGroup",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+alt+l", "command": "workbench.action.moveEditorToNextGroup",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
    {
        "key": "ctrl+alt+h", "command": "workbench.action.moveEditorToPreviousGroup",
        "when": "editorTextFocus && vim.mode != 'Insert'"
    },
]